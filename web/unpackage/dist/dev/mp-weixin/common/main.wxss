/* 页面
-------------------------------------*/
page {
  color: #000000;
}
/* 容器
-------------------------------------*/
.app_container {
  width: 100%;
  box-sizing: border-box;
  padding-left: 26rpx;
  padding-right: 26rpx;
}
.app_container.background {
  background-color: #F6F8FA;
}
.app_container.box {
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}
.app_container.border {
  border-top: 1px solid #D1D5DA;
  border-bottom: 1px solid #D1D5DA;
}
/* 内容器
-------------------------------------*/
.app_container-box {
  width: 100%;
  box-sizing: border-box;
  padding: 18rpx;
}
.app_container-box.background {
  background-color: #F6F8FA;
}
/* 轮播
-------------------------------------*/
.app_image-slide {
  width: 100%;
}
/* 表单
-------------------------------------*/
.app_view-title {
  color: #95979A;
  font-size: 30rpx;
  margin-top: 18rpx;
  margin-left: 26rpx;
}
.form_view-box .myFormItem_view-box {
  margin-top: 18rpx;
}
.app_text-placeholder {
  color: #808080;
}
.app_formItem-must:before {
  content: "*";
  position: absolute;
  color: #D86552;
  -webkit-transform: translateX(-0.5em);
          transform: translateX(-0.5em);
}
.app_textarea-placeholder {
  font-size: 32rpx;
  color: #EAEAEC;
}
/* 图标
-------------------------------------*/
.icon {
  width: 1em;
  height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
}
/* 页脚
-------------------------------------*/
.app_view-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
/* 菜单
-------------------------------------*/
.app_menu.active {
  color: #0366F1;
}
/* 暂无数据
-------------------------------------*/
.app_not {
  position: absolute;
  width: 100%;
}
/**
 * 列表间隔
 */
.app_listSpacing + .app_listSpacing {
  margin-top: 18rpx;
}
